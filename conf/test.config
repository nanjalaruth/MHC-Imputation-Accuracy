                      ]
  subpop_ids = [
                   ['1kg_all', 'africans', '/users/nanje/data/Africanids.txt'],
                   ['1kg_all', 'gambian', '/users/nanje/data/Gambianids.txt'],
                ]
  genotype_files = [
                      //['1kg_all', '/cbio/projects/001/clients/hlaimpute/datasets/1kg_All_hla.vcf.gz'],
			['1kg_all', '/cbio/projects/001/clients/hlaimpute/datasets/1kg_All_reedited.vcf.gz'],
                  ]
  H3Africa_genotypes = [
                          ['H3Africa', '/cbio/projects/001/clients/hlaimpute/datasets/h3a_africans_edit_hla.vcf.gz'],
                      ]
  sample_data_hg18 =  [
                    ['GGVP', 'omni', '/cbio/projects/001/clients/hlaimpute/datasets/trial/omni_mhc_hg18.vcf.gz'],
                    ['GGVP', 'h3a', '/cbio/projects/001/clients/hlaimpute/datasets/trial/h3a_mhc_hg18.vcf.gz'],
                ]
  sample_data_hg19 = [
                    ['GGVP', 'omni', '/cbio/projects/001/clients/hlaimpute/datasets/omni_mhc_ggvp.vcf.gz'],
                    ['GGVP', 'h3a', '/cbio/projects/001/clients/hlaimpute/datasets/h3a_mhc_ggvp.vcf.gz'],
                ]
  subpop_modeldata = [
                  ['1kg_all','africans', '/scratch3/users/nanje/MHC-Imputation-Accuracy/modeldata_HIBAG/africans_HLA_A_Model.RData',
