                   '/scratch3/users/nanje/MHC-Imputation-Accuracy/modeldata_HIBAG/africans_HLA_C_Model.RData'],
                  ['1kg_all','gambian', '/scratch3/users/nanje/MHC-Imputation-Accuracy/modeldata_HIBAG/Gambian_HLA_A_Model.RData', 
